<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="collapsedItemStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:padding">@dimen/item_margin</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="choosePeriod" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="addPaymentTitlesStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>