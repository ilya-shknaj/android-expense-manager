<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choose_period_layout"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/startDateLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <TextView
            style="@style/choosePeriod"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/periodStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/startDate"
            style="@style/choosePeriod"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="01 Января 2014"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/finishDateLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <TextView
            style="@style/choosePeriod"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/periodFinish"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/finishDate"
            style="@style/choosePeriod"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="01 Января 2014"
            android:textColor="@color/blue" />
    </LinearLayout>

</LinearLayout>